@model IEnumerable<Doggo.Models.ItemDto>

<br />
<br />
<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Products List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="ItemCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Create New Product</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Price
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
			   <tr>
				<td>
								@item.Name
				</td>
				<td>
								@((item.Price).ToString("c"))
				</td>
				<td>
				 <a asp-action="ItemEdit" class="btn btn-success" asp-route-productId="@item.Id">
				  <i class="bi bi-pencil-square"></i>
				 </a>
				 <a asp-action="ItemDelete" class="btn btn-danger" asp-route-productId="@item.Id">
                  <i class="bi bi-trash"></i> 
				 </a>
				</td>
			   </tr>
			}
  </tbody>
 </table>
</div>